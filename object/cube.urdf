<robot name="simple_cube">
  <link name="cube">
    <visual>
      <geometry>
        <box size=".15 .05 .05"/>  <!-- Length, width, height in meters -->
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>  <!-- Blue color -->
      </material>
    </visual>
    <collision>
      <geometry>
        <box size=".15 .05 .05"/>  <!-- Same as visual -->
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>  <!-- Mass in kilograms -->
      <origin xyz="0 0 0"/>  <!-- Inertial origin -->
      <inertia ixx="0.1667" ixy="0" ixz="0" iyy="0.1667" iyz="0" izz="0.1667"/>
      <!-- Inertia values for a uniform cube of size 1 and mass 1 -->
    </inertial>
  </link>
</robot>
